<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        displayBlock="true"
        xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
        xmlns:l="sap.ui.layout"
        xmlns:core="sap.ui.core"
        xmlns:ui="sap.ui.table"
        controllerName="com.maden.viewplugins.serviceReturnTable.controller.PluginView"
        width="100%"
        height="100%">
    <Page showHeader="false" title="" showFooter="true" showNavButton="false">
        <content>
            <l:VerticalLayout id="containerLayout" width="100%">
                <l:BlockLayout id="BlockLayout" background="{/selectedBackground}">
                    <l:BlockLayoutRow>
                        <l:BlockLayoutCell>
                            <Panel width="100%" height="100%" expandable="false" expanded="true" accessibleRole="Region"
                                   backgroundDesign="Transparent">
                                <content>
                                    <HBox>
                                        <HBox class="sapUiMediumMarginEnd" alignItems="Center">
                                            <Button text="{i18n>ara}" press="onPress" width="12rem"
                                                    class="sapUiMediumMarginEnd"/>
                                        </HBox>
                                    </HBox>
                                </content>
                            </Panel>
                        </l:BlockLayoutCell>
                    </l:BlockLayoutRow>
                    <l:BlockLayoutRow>
                        <l:BlockLayoutCell>
                            <Panel width="100%" height="100%" expandable="false" expanded="true" accessibleRole="Region"
                                   backgroundDesign="Transparent">
                                <content>
                                    <HBox>
                                        <HBox class="sapUiMediumMarginEnd" alignItems="Center">
                                            <Text text="{i18n>mcm.title.order}" wrapping="false"
                                                  class="sapUiMediumMarginEnd fondBoldRed"/>
                                            <Text id="orderText" wrapping="false" class="fondBoldBlck"/>
                                        </HBox>
                                        <HBox class="sapUiMediumMarginEnd" alignItems="Center">
                                            <Text text="{i18n>mcm.title.sfc}" wrapping="false"
                                                  class="sapUiMediumMarginEnd fondBoldRed"/>
                                            <Text id="sfcText" wrapping="false" class="fondBoldBlck"/>
                                        </HBox>
                                    </HBox>

                                    <HBox>
                                        <HBox class="sapUiMediumMarginEnd" alignItems="Center">
                                            <Text text="{i18n>mcm.title.material}" wrapping="false"
                                                  class="sapUiMediumMarginEnd fondBoldRed"/>
                                            <Text id="matText" wrapping="false" class="fondBoldBlck"/>
                                        </HBox>
                                        <HBox class="sapUiMediumMarginEnd" alignItems="Center">
                                            <Text text="{i18n>mcm.title.materialDesc}" wrapping="false"
                                                  class="sapUiMediumMarginEnd fondBoldRed"/>
                                            <Text id="matdescText" wrapping="false" class="fondBoldBlck"/>
                                        </HBox>
                                    </HBox>
                                    <HBox>
                                        <HBox class="sapUiMediumMarginEnd" alignItems="Center">
                                            <Text text="{i18n>mcm.title.ordQuan}" wrapping="false"
                                                  class="sapUiMediumMarginEnd fondBoldRed"/>
                                            <Text id="orderQuanText" class="fondBoldBlck" wrapping="false"/>
                                        </HBox>
                                        <HBox class="sapUiMediumMarginEnd" alignItems="Center">
                                            <Text text="{i18n>mcm.title.status}" wrapping="false"
                                                  class="sapUiMediumMarginEnd fondBoldRed"/>
                                            <Text id="statusText" wrapping="false" class="fondBoldBlck"/>
                                        </HBox>
                                    </HBox>
                                </content>
                            </Panel>
                        </l:BlockLayoutCell>
                    </l:BlockLayoutRow>
                </l:BlockLayout>
            </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>